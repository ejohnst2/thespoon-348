<h2><%= @restaurant[:name] %> (<%= @restaurant[:address] %>)</h2>

<h2>Reviews</h2>
<ul>
  <% @reviews.each do |r| %>
    <li>
      <p><%= r.content %></p>
      <p><strong><%= r.stars %></strong></p>
    </li>
  <% end %>
</ul>


<%= link_to "Add a Review", new_restaurant_review_path(@restaurant) %>

<%= link_to "Delete", restaurant_path(@restaurant),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<%= link_to "Go Home", root_path, class: 'btn btn-primary'  %>
<%= link_to "Edit Restaurant", edit_restaurant_path(@restaurant) %>
